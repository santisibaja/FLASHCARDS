            },
            {
                question: "(24) ¬øQu√© medidas tom√≥ la Junta Fundadora?",
                answer: "Aboli√≥ el ej√©rcito, nacionaliz√≥ la banca, cre√≥ el ICE y el TSE, impuls√≥ instituciones aut√≥nomas."
            },
            {
                question: "(25) ¬øQu√© cambios trajo la Constituci√≥n de 1949?",
                answer: "Garant√≠as sociales, creaci√≥n del TSE, voto femenino, servicio civil, Contralor√≠a y educaci√≥n como derecho."
            }
        ];

        const container = document.querySelector('.flashcard-container');
        const currentCardDisplay = document.getElementById('current-card');
        const totalCardsDisplay = document.getElementById('total-cards');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const shuffleBtn = document.getElementById('shuffle-btn');
        
        let currentCardIndex = 0;
        let shuffledDeck = [...flashcards];
        
        // Mostrar el total de tarjetas
        totalCardsDisplay.textContent = flashcards.length;
        
        // Funci√≥n para mezclar tarjetas (algoritmo Fisher-Yates)
        function shuffleCards() {
            shuffledDeck = [...flashcards];
            for (let i = shuffledDeck.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffledDeck[i], shuffledDeck[j]] = [shuffledDeck[j], shuffledDeck[i]];
            }
            currentCardIndex = 0;
            createFlashcards();
            alert("¬°Tarjetas mezcladas! Comenzando desde la primera.");
        }
        
        // Crear las tarjetas
        function createFlashcards() {
            container.innerHTML = '';
            
            shuffledDeck.forEach((card, index) => {
                const flashcard = document.createElement('div');
                flashcard.className = 'flashcard';
                flashcard.innerHTML = `
                    <div class="flashcard-front">${card.question}</div>
                    <div class="flashcard-back">${card.answer}</div>
                `;
                
                flashcard.addEventListener('click', () => {
                    flashcard.classList.toggle('flipped');
                });
                
                // Soporte para toque en dispositivos t√°ctiles
                flashcard.addEventListener('touchstart', (e) => {
                    if (e.touches.length === 1) {
                        flashcard.classList.toggle('flipped');
                    }
                }, { passive: true });
                
                container.appendChild(flashcard);
            });
            
            updateCardDisplay();
        }
        
        // Actualizar la visualizaci√≥n de la tarjeta actual
        function updateCardDisplay() {
            const cards = document.querySelectorAll('.flashcard');
            cards.forEach((card, index) => {
                card.style.display = index === currentCardIndex ? 'flex' : 'none';
                card.classList.remove('flipped'); // Resetear al cambiar de tarjeta
            });
            currentCardDisplay.textContent = currentCardIndex + 1;
        }
        
        // Navegaci√≥n
        prevBtn.addEventListener('click', () => {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCardDisplay();
            }
        });
        
        nextBtn.addEventListener('click', () => {
            if (currentCardIndex < shuffledDeck.length - 1) {
                currentCardIndex++;
                updateCardDisplay();
            }
        });
        
        // Mezclar tarjetas
        shuffleBtn.addEventListener('click', shuffleCards);
        
        // Teclado y gestos t√°ctiles
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft' && currentCardIndex > 0) {
                currentCardIndex--;
                updateCardDisplay();
            } else if (e.key === 'ArrowRight' && currentCardIndex < shuffledDeck.length - 1) {
                currentCardIndex++;
                updateCardDisplay();
            } else if (e.key === ' ' || e.key === 'Spacebar') {
                const currentCard = document.querySelectorAll('.flashcard')[currentCardIndex];
                currentCard.classList.toggle('flipped');
                e.preventDefault();
            }
        });
        
        // Soporte para deslizar en m√≥viles
        let touchStartX = 0;
        let touchEndX = 0;
        
        document.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });
        
        document.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        }, { passive: true });
        
        function handleSwipe() {
            const threshold = 50; // M√≠nimo p√≠xeles para considerar un deslizamiento
            
            if (touchEndX < touchStartX - threshold) {
                // Deslizamiento izquierda (siguiente)
                if (currentCardIndex < shuffledDeck.length - 1) {
                    currentCardIndex++;
                    updateCardDisplay();
                }
            } else if (touchEndX > touchStartX + threshold) {
                // Deslizamiento derecha (anterior)
                if (currentCardIndex > 0) {
                    currentCardIndex--;
                    updateCardDisplay();
                }
            }
        }
        
        // Inicializar
        createFlashcards();
    </script>
</body>
